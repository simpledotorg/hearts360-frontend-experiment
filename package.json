{
  "name": "@hearts360/dashboard",
  "version": "1.0.0",
  "description": "Flexible, embeddable HEARTS360 health data dashboard",
  "type": "module",
  "main": "./dist/web-components/index.js",
  "module": "./dist/web-components/index.js",
  "types": "./dist/web-components/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/web-components/index.js",
      "types": "./dist/web-components/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.js",
      "types": "./dist/vue/index.d.ts"
    },
    "./angular": {
      "import": "./dist/angular/index.js",
      "types": "./dist/angular/index.d.ts"
    },
    "./iframe": "./dist/iframe/index.html"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:web-components && npm run build:react && npm run build:vue && npm run build:iframe",
    "build:web-components": "vite build --config vite.config.wc.js",
    "build:react": "vite build --config vite.config.react.js",
    "build:vue": "vite build --config vite.config.vue.js",
    "build:iframe": "vite build --config vite.config.iframe.js",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit"
  },
  "keywords": [
    "dashboard",
    "health-data",
    "visualization",
    "dhis2",
    "web-components",
    "embed"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.27"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vue-chartjs": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "vue": "^3.0.0"
  }
}

